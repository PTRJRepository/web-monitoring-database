{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-undef": "warn",
        "semi": ["error", "always"],
        "quotes": ["warn", "single"],
        "indent": ["warn", 4],
        "no-trailing-spaces": "warn",
        "no-multiple-empty-lines": ["warn", { "max": 2 }],
        "no-console": "off"
    },
    "globals": {
        "$": "readonly",
        "Chart": "readonly",
        "moment": "readonly",
        "bootstrap": "readonly",
        "DataTable": "readonly"
    }
} 